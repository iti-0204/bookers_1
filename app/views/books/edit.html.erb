<h1>Editing Book</h1>

<%= flash[:notice] %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="text_box">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="text_box">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="update_box">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<div>
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>
