<h1>Editing Book</h1>

<div class="alert">
  <% if @book.errors.any? %>
    <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="text_box">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="text_box">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="update_box">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<div>
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>
