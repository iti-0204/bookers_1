<h1>Books</h1>

<!--一覧表示-->
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>show</td>
          <td>edit</td>
          <td>destroy</td>
        </tr>
      <% end %>
    </tbody>
  </table>



<!--新規登録-->
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div class="text_box">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="text_box">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>
<% end %>